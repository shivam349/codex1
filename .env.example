# Environment Configuration
# Copy this file to .env.local and update values

# Analytics
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# API Endpoints
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Payment Gateway (e.g., Razorpay)
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key

# Feature Flags
NEXT_PUBLIC_ENABLE_3D=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# Site Config
NEXT_PUBLIC_SITE_NAME="Mithila Makhana"
NEXT_PUBLIC_SITE_DESCRIPTION="Premium Mithila Makhana with immersive 3D shopping experience"
